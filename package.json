{
  "name": "nfe-xml-to-xlsx-firefox-extension",
  "version": "1.0.0",
  "description": "Firefox extension to convert NFe XML files to Excel using fast-xml-parser",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:firefox": "vite build",
    "preview": "vite preview",
    "generate-icons": "node generate-icons.cjs",
    "validate": "node validate-extension.cjs",
    "prepare": "npm run generate-icons && npm run build",
    "prepare:firefox": "npm run generate-icons && npm run build:firefox",
    "package": "node prepare-package.cjs",
    "package:firefox": "npm run validate && node prepare-package.cjs",
    "publish": "npm run generate-icons && npm run build && npm run package",
    "publish:firefox": "npm run generate-icons && npm run build:firefox && npm run package:firefox"
  },
  "dependencies": {
    "fast-xml-parser": "^4.5.3",
    "file-saver": "^2.0.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@iconify-json/mdi": "^1.2.3",
    "@types/file-saver": "^2.0.7",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "archiver": "^6.0.1",
    "autoprefixer": "^10.4.16",
    "canvas": "^2.11.2",
    "postcss": "^8.4.32",
    "sharp": "^0.34.2",
    "tailwindcss": "^3.4.0",
    "vite": "^5.0.8"
  },
  "keywords": [
    "nfe",
    "xml",
    "excel",
    "browser-extension",
    "firefox-extension"
  ],
  "author": "Adrián Pérez",
  "license": "MIT"
}
